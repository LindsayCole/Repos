// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String  @id @default(cuid())
  name          String
  email         String  @unique
  role          String  // "HR", "MANAGER", "EMPLOYEE"
  department    String?
  managerId     String?
  manager       User?               @relation("ManagerEmployees", fields: [managerId], references: [id])
  employees     User[]              @relation("ManagerEmployees")

  // BambooHR-compatible fields
  employeeId    String?   @unique  // External employee ID for HRIS sync
  startDate     DateTime?           // Employee start date
  position      String?             // Job title/position
  location      String?             // Office location

  reviewsAsEmployee PerformanceReview[] @relation("EmployeeReviews")
  reviewsAsManager  PerformanceReview[] @relation("ManagerReviews")
  createdTemplates  FormTemplate[]
  createdCycles     ReviewCycle[]
  notifications     Notification[]
  accounts          Account[]
  sessions          Session[]
}

model FormTemplate {
  id          String        @id @default(cuid())
  title       String
  description String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  createdById String
  createdBy   User          @relation(fields: [createdById], references: [id])
  sections    FormSection[]
  reviews     PerformanceReview[]
}

model FormSection {
  id          String         @id @default(cuid())
  title       String
  order       Int
  templateId  String
  template    FormTemplate   @relation(fields: [templateId], references: [id], onDelete: Cascade)
  questions   FormQuestion[]
}

model FormQuestion {
  id              String           @id @default(cuid())
  text            String
  helpText        String?
  order           Int
  sectionId       String
  section         FormSection      @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  applicableRoles String?          // JSON string for filtering roles
  responses       ReviewResponse[]
}

model ReviewCycle {
  id          String              @id @default(cuid())
  name        String              // "Q1 2025", "Annual 2024"
  description String?
  startDate   DateTime
  endDate     DateTime
  dueDate     DateTime            // When reviews should be completed by
  status      String              // "DRAFT", "ACTIVE", "COMPLETED"
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  createdById String
  createdBy   User                @relation(fields: [createdById], references: [id])
  reviews     PerformanceReview[]
}

model PerformanceReview {
  id                   String           @id @default(cuid())
  templateId           String
  template             FormTemplate     @relation(fields: [templateId], references: [id])
  employeeId           String
  employee             User             @relation("EmployeeReviews", fields: [employeeId], references: [id])
  managerId            String
  manager              User             @relation("ManagerReviews", fields: [managerId], references: [id])
  cycleId              String?
  cycle                ReviewCycle?     @relation(fields: [cycleId], references: [id])
  status               String           // "PENDING_EMPLOYEE", "PENDING_MANAGER", "COMPLETED"
  overallScore         Float?
  dueDate              DateTime?        // Individual review due date
  isDraft              Boolean          @default(true)  // Track if review is in draft state
  employeeSubmittedAt  DateTime?        // When employee submitted
  managerSubmittedAt   DateTime?        // When manager completed
  createdAt            DateTime         @default(now())
  updatedAt            DateTime         @updatedAt
  responses            ReviewResponse[]
}

model ReviewResponse {
  id             String            @id @default(cuid())
  reviewId       String
  review         PerformanceReview @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  questionId     String
  question       FormQuestion      @relation(fields: [questionId], references: [id])
  selfRating     Int?              // 1-4 scale
  selfComment    String?
  managerRating  Int?              // 1-4 scale
  managerComment String?
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String   // "REVIEW_ASSIGNED", "REVIEW_DUE_SOON", "REVIEW_SUBMITTED"
  title     String
  message   String
  link      String?
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
